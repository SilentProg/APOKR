<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RouteFragment">
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routelist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardroute_currentplace"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardroute_currentplace"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/label_route_currentdestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current destination"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18sp"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image_route_current"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/label_route_currentdestination"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:src="@drawable/icon"
                />

            <TextView
                android:id="@+id/text_wholeroute_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                app:layout_constraintTop_toTopOf="@id/image_route_current"
                app:layout_constraintStart_toEndOf="@id/image_route_current"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                />

            <Button
                android:id="@+id/btn_wholeroute_routetocurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="route"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_wholeroute_next"
                app:layout_constraintStart_toEndOf="@id/image_route_current"
                app:layout_constraintTop_toBottomOf="@id/text_wholeroute_title"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btn_wholeroute_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="next"
                app:layout_constraintTop_toTopOf="@id/btn_wholeroute_routetocurrent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/btn_wholeroute_routetocurrent"
                app:layout_constraintStart_toEndOf="@id/btn_wholeroute_routetocurrent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>