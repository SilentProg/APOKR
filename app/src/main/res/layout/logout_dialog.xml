<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:elevation="10dp"
        android:backgroundTint="@color/teal_500"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/dialog_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_warning_amber_144" />

                <TextView
                    android:id="@+id/dialog_title"
                    style="@style/homeHeading"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/headerTextSize" />
            </LinearLayout>

            <TextView
                android:id="@+id/dialog_description"
                style="@style/learnhubTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/mesage_exit_but_can"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_login_button_background"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="15dp"
                app:layout_constraintHorizontal_bias="1.0"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/teal_700"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/dialog_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/mesage_exit_but_sub"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_login_button_background"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="15dp"
                app:layout_constraintHorizontal_bias="1.0"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/teal_700"
                android:textSize="18sp"
                android:textStyle="bold"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>